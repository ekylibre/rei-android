<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_zones_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    style="@style/AppTheme.AppBarOverlay">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:theme="@style/AppTheme.AppBarOverlay"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar">

        <android.support.v7.widget.Toolbar

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/ThemeToolbar"
            app:title="@string/inventory"/>

    </android.support.design.widget.AppBarLayout>

        <ImageView
            android:id="@+id/image_zone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/toolbar"
            app:srcCompat="@drawable/ic_menu_gallery"/>
    <!--  -->

        <TextView
            android:id="@+id/nomzone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set_text zone a recupérer"
            android:textSize="17dp"
            android:layout_below="@id/toolbar"
            android:layout_toRightOf="@id/image_zone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:textSize="22dp"
        android:layout_below="@id/toolbar"
        android:layout_toRightOf="@+id/nomzone"/>
    <!--      -->


    <ImageView
        android:id="@+id/image_category"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/image_zone"
        app:srcCompat="@drawable/ic_menu_gallery"/>

    <TextView
        android:id="@+id/product_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catégorie de produits"
        android:textSize="17dp"
        android:layout_alignBaseline="@id/image_history"
        android:layout_below="@id/image_zone"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/image_history"/>
    <TextView
        android:id="@+id/Addproductcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addzone"
        android:textSize="17dp"
        android:layout_marginLeft="70dp"
        android:layout_below="@id/image_zone"
        android:layout_toRightOf="@id/product_category"/>

    <TextView
        android:id="@+id/product_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catégorie de produits"
        android:textSize="17dp"
        android:layout_alignBaseline="@id/image_history"
        android:layout_below="@id/product_category"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/Addproductcategory"/>
    <TextView
        android:id="@+id/Addproducttype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addzone"
        android:textSize="17dp"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/product_category"
        android:layout_toRightOf="@id/product_type"/>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_below="@id/image_history"
            android:layout_margin="2dp"
            tools:listitem="@layout/zone_inventory_item" />


</RelativeLayout>
