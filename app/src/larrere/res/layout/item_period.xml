<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/background_round_corners">

<!--<com.google.android.material.card.MaterialCardView-->
    <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
    <!--xmlns:tools="http://schemas.android.com/tools"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->

    <!--tools:cardCornerRadius="10dp"-->
    <!--app:cardBackgroundColor="@color/background_grey"-->
    <!--tools:cardElevation="5dp"-->
    <!--tools:cardUseCompatPadding="true">-->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/period_label_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/period_begin_date_field"
        android:text="Début"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/period_label_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/period_end_date_field"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Fin"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/period_labels_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="period_label_begin,period_label_end"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/period_date_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="period_begin_date_field,period_end_date_field"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/period_begin_date_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/period_labels_barrier"
        android:layout_marginStart="16dp"
        android:paddingStart="@dimen/field_padding_horizontal"
        android:paddingEnd="@dimen/field_padding_horizontal"
        android:paddingTop="@dimen/field_padding_vertical"
        android:paddingBottom="@dimen/field_padding_vertical"
        tools:text="25 avr."
        android:textSize="16sp"
        android:background="@drawable/field_rounded_white" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/period_at_time_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/period_label_begin"
        app:layout_constraintStart_toEndOf="@id/period_date_barrier"
        app:layout_constraintEnd_toStartOf="@id/period_begin_time_field"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="à"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/period_begin_time_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/period_at_time_begin"
        android:paddingStart="@dimen/field_padding_horizontal"
        android:paddingEnd="@dimen/field_padding_horizontal"
        android:paddingTop="@dimen/field_padding_vertical"
        android:paddingBottom="@dimen/field_padding_vertical"
        tools:text="15h00"
        android:textSize="16sp"
        android:background="@drawable/field_rounded_white"
        android:focusable="false"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/period_end_date_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/period_begin_date_field"
        app:layout_constraintStart_toEndOf="@id/period_labels_barrier"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:paddingStart="@dimen/field_padding_horizontal"
        android:paddingEnd="@dimen/field_padding_horizontal"
        android:paddingTop="@dimen/field_padding_vertical"
        android:paddingBottom="@dimen/field_padding_vertical"
        tools:text="25 avr."
        android:textSize="16sp"
        android:background="@drawable/field_rounded_white"
        android:focusable="false"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/period_at_time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/period_label_end"
        app:layout_constraintStart_toEndOf="@id/period_date_barrier"
        app:layout_constraintEnd_toStartOf="@id/period_begin_time_field"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="à"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/period_end_time_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/period_end_date_field"
        app:layout_constraintStart_toEndOf="@id/period_at_time_end"
        android:paddingStart="@dimen/field_padding_horizontal"
        android:paddingEnd="@dimen/field_padding_horizontal"
        android:paddingTop="@dimen/field_padding_vertical"
        android:paddingBottom="@dimen/field_padding_vertical"
        tools:text="16h00"
        android:textSize="16sp"
        android:background="@drawable/field_rounded_white"
        android:focusable="false"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/period_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/period_warning_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/period_end_date_field"
        app:layout_constraintStart_toStartOf="@string/packaging"
        android:layout_marginTop="8dp"
        tools:text="La date de début ne peut etre après la date de fin"
        android:textColor="@color/basic_orange"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>