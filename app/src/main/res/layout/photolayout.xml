<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:id="@+id/choosefromgalery"
    app:srcCompat="@drawable/ic_image_black"
    android:layout_gravity="center_horizontal"
    />

    <TextView
        android:id="@+id/textgallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/product_qtt_fix"
        tools:text="Take picture from gallery"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/takepictureprendre"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_add_a_photo"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/product_qtt_fix"
        tools:text="Take a new picture"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>