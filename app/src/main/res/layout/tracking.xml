<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/background_grey"
	>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:id="@+id/interventionInfo"
        android:background="@drawable/white_square"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="2dp"
        android:scrollbarDefaultDelayBeforeFade="@android:integer/config_longAnimTime"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/infoLayout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            >

        </RelativeLayout>
    </ScrollView>




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:gravity="bottom"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">


        <Button
            android:id="@+id/map_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:drawableLeft="@drawable/ic_map"
            android:text="@string/open_map"
            android:background="@drawable/basic_button"
            android:textColor="@color/ultraLight_grey"
            android:onClick="openMap"
            android:layout_marginBottom="10dp"/>



        <Button
            android:id="@+id/start_intervention_button"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_add_white"
            android:text="@string/start"
            android:onClick="startIntervention"
            android:background="@drawable/basic_button"
            android:textColor="@color/ultraLight_grey"



            android:visibility="gone"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.30"
                >
                <Button
                    android:id="@+id/preparation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_disabled"
                    android:text="Prépa"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey"
                    android:textSize="20sp"
                    android:layout_marginStart="0dp"
                    android:onClick="newPhase"
                    android:paddingBottom="40dp"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    />



            </FrameLayout>

            <Button
                android:id="@+id/active_preparation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.30"
                android:background="@drawable/state_enabled"
                android:paddingTop="15dp"
                android:text="Prépa"
                android:textStyle="bold"
                android:textColor="@color/ultraLight_grey"
                android:textSize="20sp"
                android:layout_marginStart="0dp"
                android:clickable="false"
                android:visibility="gone"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />
            <Button
                android:id="@+id/traveling"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.30"
                android:background="@drawable/button_disabled"
                android:paddingTop="15dp"
                android:text="Dépl"
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:onClick="newPhase"
                />
            <Button
                android:id="@+id/active_traveling"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.30"
                android:background="@drawable/state_enabled"
                android:paddingTop="15dp"
                android:text="Dépl"
                android:textStyle="bold"
                android:textColor="@color/ultraLight_grey"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:clickable="false"
                android:visibility="gone"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />
            <Button
                android:id="@+id/intervention"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.30"
                android:background="@drawable/button_disabled"
                android:paddingTop="15dp"
                android:text="Interv"
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:onClick="newPhase"
                />


            <Button
                android:id="@+id/active_intervention"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.30"
                android:background="@drawable/state_enabled"
                android:paddingTop="15dp"
                android:text="Interv"
                android:textStyle="bold"
                android:textColor="@color/ultraLight_grey"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:clickable="false"
                android:visibility="gone"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />

        </LinearLayout>



        <TextView
            android:id="@+id/procedure_nature"
            android:visibility="invisible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/map_button"
            android:layout_alignParentStart="true"/>
    </LinearLayout>
</LinearLayout>

