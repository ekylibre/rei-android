<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/ProductinfoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ClientNameId"
        android:text="Aloha"/>

    <TextView
        android:id="@+id/ClientNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ReceptiondateId"
        android:text="Got to luv u"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/UnitéId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ProductinfoId"
        android:layout_alignBottom="@+id/ProductinfoId"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="49dp"
        android:text="Kiss" />

    <ImageButton
        android:id="@+id/displayPictureId"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_delete"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ProductinfoId"
        android:layout_alignBottom="@+id/ProductinfoId"
        android:layout_toStartOf="@+id/UnitéId"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Name" />


</RelativeLayout>